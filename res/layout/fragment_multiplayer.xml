<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/stormBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/bg_home"
        android:tint="#c5000000" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/bg_home_thunder" />

    <LinearLayout
        android:id="@+id/mainButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <com.giggs.apps.chaos.views.CustomButton
            android:id="@+id/invitePlayersButton"
            style="@style/HomeScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/invite_players" />

        <com.giggs.apps.chaos.views.CustomButton
            android:id="@+id/quickGameButton"
            style="@style/HomeScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/quick_game" />

        <com.giggs.apps.chaos.views.CustomButton
            android:id="@+id/showInvitationsButton"
            style="@style/HomeScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/show_invitations" />
    </LinearLayout>

    <com.giggs.apps.chaos.views.CustomButton
        android:id="@+id/rankingsButton"
        style="@style/SettingsSmallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:text="@string/rankings"
        android:textSize="16sp" />

    <com.giggs.apps.chaos.views.CustomButton
        android:id="@+id/backButton"
        style="@style/HomeScreenButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:text="@string/back"
        android:textSize="20sp" />

</RelativeLayout>